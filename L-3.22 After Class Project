        <h1>Finding the max Number</h1>
        <p id="result"></p>
        <script>
            function Sum(){
                var i;
                var sum = 0;
                for(i=0; i<arguments.length; i++){
                    sum += arguments[i];
                }
                return sum;
            }
            document.getElementById("result").innerHTML = "The Sum is "  + Sum(7,2);
        </script>

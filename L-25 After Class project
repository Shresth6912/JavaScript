    </head>
    <body>
        <h1>Divisibility Check by 17</h1>
        <button onclick="divide()">Check divisibility by 17</button>
        <script>
            function divide(){
                var num = Number(prompt("Enter a number: "));

                var reminder = num%17;

                if(reminder ==0){
                    document.write(num + " is divisible by 17");
                } else{
                    document.write(num + " is not divisible by 17");
                }
            }
        </script>
    </body>
</html>
